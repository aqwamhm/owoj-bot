generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Member {
  name       String
  currentJuz Int
  reports    Report[]
  group      Group    @relation(fields: [groupId], references: [id])
  groupId    String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@id([name, groupId])
}

model Group {
  id        String   @id
  number    Int      @unique
  members   Member[]
  createdAt DateTime @default(now())
}

model Report {
  id              String     @id @default(uuid())
  member          Member     @relation(fields: [memberName, memberGroupId], references: [name, groupId], onDelete: Cascade, onUpdate: Cascade)
  memberName      String
  memberGroupId   String
  juz             Int
  pages           Int
  type            ReportType @default(TILAWAH)
  period          Period     @relation(fields: [periodStartDate, periodEndDate], references: [startDate, endDate], onUpdate: Cascade)
  periodStartDate DateTime
  periodEndDate   DateTime
  createdAt       DateTime   @default(now())

  @@unique([memberName, memberGroupId, pages, periodStartDate, periodEndDate])
}

model Period {
  reports   Report[]
  startDate DateTime
  endDate   DateTime
  createdAt DateTime @default(now())

  @@id([startDate, endDate])
}

model Admin {
  phoneNumber String @id
  name        String
}

enum ReportType {
  TILAWAH
  TERJEMAH
  MUROTTAL
}
